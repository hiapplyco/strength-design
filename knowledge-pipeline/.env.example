# Knowledge Pipeline Environment Variables
# Copy this file to .env and fill in your actual values

# Firebase Configuration
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour Firebase private key here\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com

# Google AI / Gemini API
GEMINI_API_KEY=your-gemini-api-key-here

# Reddit API (Optional - for enhanced access)
REDDIT_CLIENT_ID=your-reddit-client-id
REDDIT_CLIENT_SECRET=your-reddit-client-secret
REDDIT_USER_AGENT=FitnessKnowledgeIngestor/1.0 (by /u/yourusername)

# Wikipedia API (Usually no key needed, but for rate limiting)
WIKIPEDIA_USER_AGENT=FitnessKnowledgeIngestor/1.0 (contact@yourapp.com)

# Processing Configuration
MAX_CONCURRENT_REQUESTS=5
DEFAULT_BATCH_SIZE=25
CACHE_TIMEOUT_MINUTES=30

# Logging Configuration
LOG_LEVEL=info
LOG_TO_FILE=true
LOG_DIRECTORY=./logs

# Data Storage
DATA_DIRECTORY=./data
BACKUP_DIRECTORY=./data/backups
ENABLE_COMPRESSION=true

# Rate Limiting
REDDIT_REQUESTS_PER_MINUTE=60
WIKIPEDIA_REQUESTS_PER_MINUTE=120
ENABLE_RATE_LIMITING=true

# Quality Thresholds
MIN_QUALITY_SCORE=0.6
MIN_CONTENT_LENGTH=100
MAX_CONTENT_LENGTH=10000

# Development/Testing
DEVELOPMENT_MODE=false
TEST_MODE=false
DRY_RUN=false