# Strength.Design Mobile App Environment Configuration
# Copy this file to .env.local and update with your actual values

# Firebase Configuration (Required)
EXPO_PUBLIC_FIREBASE_API_KEY=your-firebase-api-key
EXPO_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
EXPO_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
EXPO_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
EXPO_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=123456789
EXPO_PUBLIC_FIREBASE_APP_ID=1:123456789:web:abcdef123456

# Firebase Emulator Configuration (Optional - for local development)
# Set to 'true' to use Firebase emulators instead of production services
EXPO_PUBLIC_USE_FIREBASE_EMULATORS=false
# Override emulator host (defaults: localhost for iOS/web, 10.0.2.2 for Android)
# Set this to your computer's local IP if testing on physical device
# EXPO_PUBLIC_EMULATOR_HOST=192.168.1.100

# Pose Analysis Configuration
EXPO_PUBLIC_POSE_ANALYSIS_ENABLED=true
EXPO_PUBLIC_POSE_DEBUG_MODE=false
EXPO_PUBLIC_MAX_VIDEO_DURATION=30
EXPO_PUBLIC_MAX_FILE_SIZE=50000000
EXPO_PUBLIC_POSE_CONFIDENCE_THRESHOLD=0.7
EXPO_PUBLIC_POSE_FRAME_SKIP=2

# Development Settings
EXPO_PUBLIC_DEV_MODE=false
EXPO_PUBLIC_ENABLE_MOCK_POSE_DATA=false
EXPO_PUBLIC_LOG_LEVEL=info

# Performance Settings
EXPO_PUBLIC_ENABLE_PERFORMANCE_MONITORING=true
EXPO_PUBLIC_POSE_BATCH_SIZE=10
EXPO_PUBLIC_USE_WORKER_THREAD=true

# Analytics and Monitoring
EXPO_PUBLIC_ENABLE_ANALYTICS=true
EXPO_PUBLIC_ENABLE_CRASH_REPORTING=true

# Feature Flags
EXPO_PUBLIC_ENABLE_SQUAT_ANALYSIS=true
EXPO_PUBLIC_ENABLE_DEADLIFT_ANALYSIS=true
EXPO_PUBLIC_ENABLE_PUSHUP_ANALYSIS=true
EXPO_PUBLIC_ENABLE_SPORTS_ANALYSIS=false

# ML Kit Configuration
EXPO_PUBLIC_MLKIT_MODE=accurate
EXPO_PUBLIC_ENABLE_POSE_TRACKING=true
EXPO_PUBLIC_DETECT_ALL_POSES=false

# Gemini Live Analysis (WebRTC)
EXPO_PUBLIC_GEMINI_LIVE_API_KEY=your-gemini-live-api-key
EXPO_PUBLIC_GEMINI_LIVE_MODEL=models/gemini-2.5-flash
EXPO_PUBLIC_GEMINI_LIVE_ENDPOINT=https://generativelanguage.googleapis.com/v1beta
EXPO_PUBLIC_GEMINI_LIVE_RESPONSE_MODALITIES=TEXT
EXPO_PUBLIC_GEMINI_LIVE_MEDIA_RESOLUTION=MEDIA_RESOLUTION_MEDIUM
